{
	"trailingComma": "all",
	"tabWidth": 2,
	"semi": false,
	"singleQuote": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"useTabs": true,
	"printWidth": 100,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^@lib/components",
		"^@lib/types",
		"^@lib/utils",
		"^@lib/",
		"^(.*)-constants.ts$",
		"^(.*)-types\\.ts$",
		"^[./].*(?<!\\.(less|css))$",
		"\\.(less|css)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
